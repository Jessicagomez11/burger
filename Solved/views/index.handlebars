<div class="container">
<h1>Burger!</h1>

<div class="row">
<h2>Add a Burger</h2>


  

    <form class="create-form" action="#">

      <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="name">
      </div>

      <div class="form-group">
        <label for="devoured">Status</label><br>
       <p>
      <label>
        <input class="with-gap" name="devoured" type="radio" value="0" checked />
        <span>Not Eaten</span>
      </label>
    </p>
    <p>
      <label>
        <input class="with-gap" name="devoured" type="radio" value='1' />
        <span>Eaten</span>
      </label>
    </p>
      </div>

     

      <button type="submit">Add Burger</button>
    </form>

  </div>

  <div class="row">

    <div id="availableBurgerDiv " class="s6 m6">


      <h2>BURGERS</h2>

      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block notEaten=true}}
        {{/unless}}
        {{/each}}
      </ul>

    </div>


    <div id="eatenBurgerDiv" class="s6 m6">

    <h2>BURGERS THAT HAVE BEEN EATEN</h2>

    <ul>
      {{#each burgers}}
      {{#if devoured}}
      {{> burgers/burger-block notEaten=false}}
      {{/if}}
      {{/each}}
    </ul>
    </div>

  </div>
</div>
