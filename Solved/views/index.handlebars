<h1>Burger!</h1>
<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="devoured">Eaten?</label><br>
    <input class="with-gap" type="radio" name="devoured" value="1" > Eaten!<br>
    <input class="with-gap" type="radio" name="devoured" value="0" checked> Not eaten
  </div>

  <button type="submit">Add Burger</button>
</form>

<div id="availableBurgerDiv">
<h2>BURGERS</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block notEaten=true}}
    {{/unless}}
  {{/each}}
</ul>

</div>


<div id="eatenBurgerDiv"></div>

<h2>BURGERS THAT HAVE BEEN EATEN</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block notEaten=false}}
    {{/if}}
  {{/each}}
</ul>

</div>